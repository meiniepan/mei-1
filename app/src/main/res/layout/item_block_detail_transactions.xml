<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">

    <ImageView
        android:id="@+id/image1"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:layout_marginEnd="10dp"
        android:src="@mipmap/arrow_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="48dp"
        android:layout_height="18dp"
        android:text="交易ID"
        android:textSize="@dimen/dimens_10sp"
        android:textColor="@color/common_gray"
        android:background="@drawable/gray_round_bg"
        android:gravity="center"
        android:layout_marginStart="34dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/item_block_detail_trans_id"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/text1"
        tool:text="sadl;sakd;la;ldskad;saldk;lakld;"
        app:layout_constraintStart_toEndOf="@id/text1"
        android:layout_marginStart="15dp"
        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimens_10sp"
        android:textColor="@color/common_gray"
        android:background="@drawable/gray_round_bg"
        android:gravity="center"
        android:text="交易时间"
        app:layout_constraintStart_toStartOf="@id/text1"
        app:layout_constraintTop_toBottomOf="@id/item_block_detail_trans_id"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/item_block_detail_trans_time"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/item_block_detail_trans_id"
        app:layout_constraintTop_toTopOf="@id/text2"/>
</android.support.constraint.ConstraintLayout>