<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/night_blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/night_blue"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="4dp">

        <LinearLayout
            android:id="@+id/home_location_area"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:src="@mipmap/main_location" />

            <TextView
                android:id="@+id/home_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:ellipsize="end"
                android:maxLength="10"
                android:textColor="@color/white"
                android:textSize="@dimen/dimens_16sp"
                tool:text="北京" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/arrow_white" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/home_search"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:src="@mipmap/white_search" />

        <ImageView
            android:id="@+id/home_map"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:src="@mipmap/map" />
    </LinearLayout>

    <com.wuyou.user.view.widget.pullToResfresh.HomeRefreshLayout
        android:id="@+id/home_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.wuyou.user.util.JZVideoPlayerFullscreen
            android:id="@+id/home_video"
            android:layout_width="match_parent"
            android:layout_height="180dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center"
            android:background="@color/tint_bg"
            android:textColor="@color/common_gray"
            android:textSize="@dimen/dimens_12sp" />

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/home_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">
                <com.youth.banner.Banner
                    android:id="@+id/home_activity"
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:background="@color/tint_bg"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    app:indicator_drawable_selected="@drawable/banner_selected"
                    app:indicator_drawable_unselected="@drawable/banner_not_selected"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/main_serve_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </com.wuyou.user.view.widget.pullToResfresh.HomeRefreshLayout>
</LinearLayout>