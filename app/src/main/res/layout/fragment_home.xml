<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divide_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/night_blue"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="4dp"
        android:paddingStart="10dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/home_location" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="北京"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arrow_white" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@mipmap/white_search" />

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@mipmap/map" />
    </LinearLayout>

    <com.youth.banner.Banner
        android:layout_width="match_parent"
        android:layout_height="180dp" />


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/v1"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:src="@mipmap/main_ver_icon" />

        <TextView
            android:id="@+id/h1"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/orange_border"
            android:gravity="center"
            android:text="小饭桌"
            app:layout_constraintLeft_toRightOf="@+id/v1" />

        <TextView
            android:id="@+id/h2"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/orange_border"
            android:gravity="center"
            android:text="小饭桌"
            app:layout_constraintLeft_toRightOf="@+id/h1" />

        <TextView
            android:id="@+id/h3"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/orange_border"
            android:gravity="center"
            android:text="小饭桌"
            app:layout_constraintLeft_toRightOf="@+id/h2" />

        <TextView
            android:id="@+id/h4"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/orange_border"
            android:gravity="center"
            android:text="小饭桌"
            app:layout_constraintLeft_toRightOf="@+id/v1"
            app:layout_constraintTop_toBottomOf="@+id/h1" />

        <TextView
            android:id="@+id/h5"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/orange_border"
            android:gravity="center"
            android:text="小饭桌"
            app:layout_constraintLeft_toRightOf="@+id/h4"
            app:layout_constraintTop_toTopOf="@+id/h4" />

        <TextView
            android:id="@+id/h6"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/orange_border"
            android:gravity="center"
            android:text="小饭桌"
            app:layout_constraintLeft_toRightOf="@+id/h5"
            app:layout_constraintTop_toTopOf="@+id/h4" />

        <ImageView
            android:id="@+id/v2"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:src="@mipmap/main_ver_icon"
            app:layout_constraintTop_toBottomOf="@+id/v1" />

        <ImageView
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:src="@mipmap/main_ver_icon"
            app:layout_constraintTop_toBottomOf="@+id/v2" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>