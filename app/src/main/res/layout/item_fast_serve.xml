<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="92dp">

    <FrameLayout
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:background="@drawable/half_white_border">

        <RadioButton
            android:id="@+id/fast_radio"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="25dp"
            android:background="@drawable/btn_radio"
            android:button="@null"
            android:checked="true"
            android:focusable="false"
            android:clickable="false"/>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/fast_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/serve_low">

        <TextView
            android:id="@+id/fast_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="10dp"
            android:text="快捷服务"
            android:textColor="@color/white"
            android:textSize="@dimen/dimens_16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/fast_title"
            android:layout_below="@+id/fast_title"
            android:layout_marginTop="5dp"
            android:text="快捷服务,忠于用户"
            android:textColor="@color/shallow_white" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:text="/小时"
            android:textSize="@dimen/dimens_16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fast_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/text"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/text"
            android:text="99"
            android:textSize="@dimen/dimens_20sp" />
    </RelativeLayout>
</LinearLayout>