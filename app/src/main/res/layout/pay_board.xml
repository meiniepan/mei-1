<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin">
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/pay_close"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="付款详情"
                android:textSize="@dimen/dimens_18sp"/>
            <ImageView
                android:id="@+id/pay_ask"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </LinearLayout>
        <include layout="@layout/split_line"/>

        <RelativeLayout
            android:id="@+id/pay_choose_area"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_gray"
                android:layout_centerVertical="true"
                android:text="支付方式"/>
            <ImageView
                android:id="@+id/pay_choose"
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/arrow_gray"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/pay_way"
                android:layout_width="wrap_content"
                android:textColor="@color/common_gray"
                android:layout_height="wrap_content"
                android:text="余额支付"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/pay_choose" />
        </RelativeLayout>

        <include layout="@layout/split_line"/>

        <RelativeLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="需付款"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="¥"
                android:id="@+id/textView5"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/pay_money" />
            <TextView
                android:id="@+id/pay_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="100"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/pay_finish"
        style="@style/button_style"
        android:layout_marginTop="80dp"
        android:text="确认支付" />
</LinearLayout>