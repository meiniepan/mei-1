<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/night_blue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="验证手机号"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />

        <include
            android:id="@+id/back"
            layout="@layout/back_black" />
    </RelativeLayout>

    <include layout="@layout/split_area"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_height"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号："/>
        <TextView
            android:id="@+id/phone_update_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="123132131"/>
        <Button
            android:onClick="sendCaptchaToUpdate"
            android:id="@+id/phone_update_send"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="@string/send_captcha"
            android:textColor="#fff"
            android:gravity="center"
            android:background="@drawable/captcha_selector"/>
    </LinearLayout>

    <include layout="@layout/split_area"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_height"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码："/>
        <EditText
            android:id="@+id/phone_update_captcha"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@color/common_dark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tint_bg">

        <Button
            android:onClick="nextUpdatePhone"
            android:layout_marginTop="50dp"
            android:text="@string/next"
            style="@style/button_style"/>
    </FrameLayout>
</LinearLayout>