<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/night_blue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/person_info"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />

        <include
            android:id="@+id/back"
            layout="@layout/back_black" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/info_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/default_pic"/>

        <TextView
            android:id="@+id/info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="用户名"
            android:textSize="@dimen/dimens_18sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/info_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="编辑"
            android:textColor="@color/night_blue"
            android:textSize="@dimen/dimens_12sp" />
    </LinearLayout>

    <include layout="@layout/split_line_margin" />

    <LinearLayout
        android:id="@+id/info_account_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="账号" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:src="@mipmap/arrow_gray" />
    </LinearLayout>

    <include layout="@layout/split_line_margin" />

    <LinearLayout
        android:id="@+id/info_email_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="邮箱" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:src="@mipmap/arrow_gray" />
    </LinearLayout>

    <include layout="@layout/split_line_margin" />

    <LinearLayout
        android:id="@+id/info_sex_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="性别" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:src="@mipmap/arrow_gray" />
    </LinearLayout>

    <include layout="@layout/split_line_margin" />

    <LinearLayout
        android:id="@+id/info_birthday_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="生日" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:src="@mipmap/arrow_gray" />
    </LinearLayout>

    <include layout="@layout/shadow_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tint_bg" />
</LinearLayout>