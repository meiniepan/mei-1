<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/night_blue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/person_info"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />

        <include
            android:id="@+id/back"
            layout="@layout/back_black" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="头像" />

        <ImageView
            android:id="@+id/info_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/default_head" />

    </LinearLayout>

    <include layout="@layout/split_line_margin" />

    <LinearLayout
        android:id="@+id/info_account_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="昵称" />

        <TextView
            android:id="@+id/tv_account_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp" />

        <include layout="@layout/next_layout" />
    </LinearLayout>

    <include layout="@layout/split_line_margin" />

    <LinearLayout
        android:id="@+id/info_phone_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="手机" />

        <TextView
            android:id="@+id/tv_phone_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp" />

        <include layout="@layout/next_layout" />
    </LinearLayout>
    <include layout="@layout/split_line_margin" />

    <LinearLayout
        android:id="@+id/info_email_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="邮箱" />

        <TextView
            android:id="@+id/tv_email_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未填写"
            android:layout_marginEnd="10dp" />

        <include layout="@layout/next_layout" />
    </LinearLayout>

    <include layout="@layout/split_line_margin" />

    <LinearLayout
        android:id="@+id/info_sex_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="性别" />

        <TextView
            android:id="@+id/tv_sex_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未填写"
            android:layout_marginEnd="10dp" />

        <include layout="@layout/next_layout" />
    </LinearLayout>

    <include layout="@layout/split_line_margin" />

    <LinearLayout
        android:id="@+id/info_birthday_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="生日" />

        <TextView
            android:id="@+id/tv_birthday_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未填写"
            android:layout_marginEnd="10dp" />

        <include layout="@layout/next_layout" />
    </LinearLayout>

    <include layout="@layout/split_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tint_bg" />
</LinearLayout>