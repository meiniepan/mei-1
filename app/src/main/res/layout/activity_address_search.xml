<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/night_blue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="地址搜索"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />


        <include
            android:id="@+id/back"
            layout="@layout/back_black" />
    </RelativeLayout>

    <EditText
        android:id="@+id/address_search"
        android:drawableStart="@mipmap/search_small"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:imeOptions="actionSearch"
        android:singleLine="true"
        android:hint="请输入小区，写字楼名称"
        android:background="@color/tint_bg"
        android:textColor="@color/common_dark"
        android:layout_margin="10dp"/>

    <include layout="@layout/split_line"/>

    <com.gs.buluo.common.widget.StatusLayout
        android:id="@+id/address_search_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tint_bg">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/address_search_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"/>
    </com.gs.buluo.common.widget.StatusLayout>

</LinearLayout>