<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.TabLayout
        android:id="@+id/vote_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_height"
        app:tabSelectedTextColor="@color/common_dark"
        app:tabTextAppearance="@style/TabLayoutStyle_14"
        app:tabTextColor="@color/common_gray"
        android:background="@color/white"
        app:tabIndicatorHeight="0dp"
        android:layout_alignParentBottom="true"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vote_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/vote_tab">
    </android.support.v4.view.ViewPager>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/vote_tab"
        android:background="@color/tint_bg"/>
    <View
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:background="@color/tint_bg"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <View
        android:id="@+id/bottom_alpha"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:visibility="gone"
        android:background="#50000000"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>