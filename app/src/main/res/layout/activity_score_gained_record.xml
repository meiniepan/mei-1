<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/night_blue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/gained_score_record"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />

        <include
            android:id="@+id/back"
            layout="@layout/back_black" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin_end"
        android:layout_marginStart="@dimen/activity_horizontal_margin_end"
        android:layout_marginTop="16dp"
        android:background="@mipmap/score_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="共获取积分"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/score_gained"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />
    </LinearLayout>
    <com.gs.buluo.common.widget.recyclerHelper.RefreshRecyclerView
        android:id="@+id/score_gained_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:emptyDrawable="@mipmap/empty_score"
        app:errorDrawable="@mipmap/net_error"
        app:loginDrawable="@mipmap/login_status" />

</LinearLayout>