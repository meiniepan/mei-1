<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin">


    <TextView
        android:id="@+id/item_serve_mode_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/door_serve" />


    <RadioButton
        android:id="@+id/item_serve_mode_radio"
        android:layout_width="@dimen/radio_size"
        android:layout_height="@dimen/radio_size"
        android:background="@drawable/btn_radio"
        android:button="@null"
        android:checked="true"
        android:clickable="false"/>
</LinearLayout>
