<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="岗位名称" />

        <TextView
            android:id="@+id/tv_volunteer_detail_position_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="剩余招募" />

        <TextView
            android:id="@+id/tv_volunteer_detail_position_need"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="岗位报酬" />

        <TextView
            android:id="@+id/tv_volunteer_detail_position_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:hint="岗位要求" />

        <TextView
            android:id="@+id/tv_volunteer_detail_position_require"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="形象好，气质佳"
            android:layout_marginStart="26dp" />
    </LinearLayout>

    <include layout="@layout/split_line" />
</LinearLayout>