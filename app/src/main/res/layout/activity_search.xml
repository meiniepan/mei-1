<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/night_blue"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="搜索"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />

        <include
            android:id="@+id/back"
            layout="@layout/back_black" />
    </RelativeLayout>

    <EditText
        android:id="@+id/search_history_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_height"
        android:background="@null"
        android:singleLine="true"
        android:imeOptions="actionSearch"
        android:hint="请输入搜索关键字"
        android:paddingStart="10dp" />
    <include layout="@layout/split_line"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.gs.buluo.common.widget.StatusLayout
            android:id="@+id/search_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:emptyDrawable="@mipmap/img_housekeeping"
            app:errorDrawable="@mipmap/net_error"
            android:layout_below="@+id/top">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/search_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" />
        </com.gs.buluo.common.widget.StatusLayout>
        <android.support.v7.widget.CardView
            android:id="@+id/search_history_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="2dp">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/search_history_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </android.support.v7.widget.CardView>
    </FrameLayout>
</LinearLayout>