<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/night_blue">

        <TextView
            android:id="@+id/address_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="地址列表"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/address_title"
            android:src="@mipmap/arrow_white"
            android:visibility="gone" />

        <include
            android:id="@+id/back"
            layout="@layout/back_black" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/address_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="6dp"
            android:background="@color/tint_bg"
            android:drawableStart="@mipmap/search_small"
            android:textColor="@color/common_dark" />
    </FrameLayout>

    <include layout="@layout/split_line" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.gs.buluo.common.widget.StatusLayout
            android:id="@+id/address_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/tint_bg"
            app:emptyDrawable="@mipmap/empty_order"
            app:errorDrawable="@mipmap/net_error">

            <com.wuyou.user.view.widget.recyclerHelper.NewRefreshRecyclerView
                android:id="@+id/address_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" />
        </com.gs.buluo.common.widget.StatusLayout>

        <include layout="@layout/empty_address_layout"
            android:id="@+id/address_empty_view"
            android:visibility="gone"/>
    </FrameLayout>

    <include layout="@layout/split_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/address_manager"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="地址管理" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/tint_bg" />

        <TextView
            android:id="@+id/address_current_location"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="定位当前位置" />
    </LinearLayout>

</LinearLayout>