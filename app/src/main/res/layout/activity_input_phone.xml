<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/night_blue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/input_phone"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size"/>

        <include
            android:id="@+id/back"
            layout="@layout/back_black" />
    </RelativeLayout>
    <TextView
        android:id="@+id/input_phone_title"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:textColor="@color/common_gray"
        android:text="请输入手机号，重新设置密码"/>

    <EditText
        android:id="@+id/input_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_height"
        android:hint="@string/input_phone"
        android:inputType="phone"
        android:background="@color/white"
        android:paddingStart="@dimen/activity_horizontal_margin" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_height"
        android:elevation="1dp"
        android:background="@color/divide_gray"
        tools:targetApi="lollipop" />
    <Button
        android:text="@string/next"
        android:onClick="sendCaptcha"
        style="@style/button_style"/>
</LinearLayout>