<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:paddingBottom="12dp">

    <ImageView
        android:id="@+id/activity_picture"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_pic" />

    <TextView
        android:id="@+id/activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        tool:text="变水水水水水水水水水水水水水水水水水水水水涛涛涛涛"
        android:textSize="@dimen/dimens_16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_picture" />

    <ImageView
        android:id="@+id/activity_image1"
        android:layout_width="16dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:src="@mipmap/activity_location"
        app:layout_constraintStart_toStartOf="@id/activity_title"
        app:layout_constraintTop_toBottomOf="@+id/activity_title" />

    <TextView
        android:id="@+id/activity_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ellipsize="end"
        android:maxLength="18"
        android:textColor="@color/common_gray"
        app:layout_constraintStart_toEndOf="@id/activity_image1"
        app:layout_constraintTop_toTopOf="@+id/activity_image1"
        tool:text="北京西欧城区" />


    <ImageView
        android:id="@+id/activity_image2"
        android:layout_width="16dp"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:src="@mipmap/activity_profile"
        app:layout_constraintStart_toEndOf="@id/activity_date"
        app:layout_constraintTop_toTopOf="@id/activity_date" />

    <TextView
        android:id="@+id/activity_left_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/common_gray"
        app:layout_constraintStart_toEndOf="@id/activity_image2"
        app:layout_constraintTop_toTopOf="@id/activity_image2"
        tool:text="剩余222位" />

    <ImageView
        android:id="@+id/activity_image3"
        android:layout_width="16dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/activity_date"
        app:layout_constraintStart_toStartOf="@id/activity_image1"
        app:layout_constraintTop_toBottomOf="@+id/activity_image1" />

    <TextView
        android:id="@+id/activity_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/common_gray"
        app:layout_constraintStart_toEndOf="@id/activity_image3"
        app:layout_constraintTop_toTopOf="@id/activity_image3"
        tool:text="05/23" />

    <TextView
        android:id="@+id/activity_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"
        android:text="50"
        android:textColor="@color/common_red"
        android:textSize="@dimen/dimens_18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/activity_status"
        android:layout_width="78dp"
        android:layout_height="28dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/activity_full"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/dimens_16sp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_picture"
        app:layout_constraintEnd_toEndOf="parent"
        tool:text="已饱满" />
</android.support.constraint.ConstraintLayout>